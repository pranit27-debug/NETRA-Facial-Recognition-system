# NETRA Environment Configuration

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=False
APP_WORKERS=4

# Model Settings
MODEL_PATH=models/siamese.pth
MODEL_EMBEDDING_DIM=128
MODEL_BACKBONE=resnet50
MODEL_DEVICE=auto

# Security
SECRET_KEY=your-secret-key-here-change-in-production
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png

# Database (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/netra

# Redis (if needed for caching)
# REDIS_URL=redis://localhost:6379/0

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO
LOG_FILE=logs/netra.log

# API Rate Limiting
RATE_LIMIT=100

# CORS
CORS_ORIGINS=*
